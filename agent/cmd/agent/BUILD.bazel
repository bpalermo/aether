load("@rules_go//go:def.bzl", "go_binary", "go_library")
load("//bazel/img:go_multi_arch_image.bzl", "go_multi_arch_image")

go_library(
    name = "agent_lib",
    srcs = ["main.go"],
    importpath = "github.com/bpalermo/aether/agent/cmd/agent",
    visibility = ["//visibility:private"],
    deps = [
        "//agent/pkg/cmd",
        "@io_k8s_sigs_controller_runtime//:controller-runtime",
    ],
)

go_binary(
    name = "agent",
    embed = [":agent_lib"],
    visibility = ["//visibility:public"],
)

go_multi_arch_image(
    name = "agent_image",
    binary = ":agent",
    repository = "palermo/aether-agent",
)
