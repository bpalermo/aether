load("@rules_go//go:def.bzl", "go_binary", "go_library")
load("@rules_pkg//:pkg.bzl", "pkg_tar")
load("//bazel/oci:go_multi_arch_image.bzl", "go_multi_arch_image")

go_library(
    name = "agent_lib",
    srcs = ["main.go"],
    importpath = "github.com/bpalermo/aether/agent/cmd/agent",
    visibility = ["//visibility:private"],
    deps = ["//agent/pkg/cmd"],
)

go_binary(
    name = "agent",
    embed = [":agent_lib"],
    visibility = ["//visibility:public"],
)

pkg_tar(
    name = "cni",
    srcs = ["//cni/cmd/plugin"],
    mode = "755",
    package_dir = "/opt/cni/bin",
    remap_paths = {
        "plugin": "aether-cni",
    },
    visibility = ["//visibility:private"],
)

go_multi_arch_image(
    name = "agent_image",
    binary = ":agent",
    repository = "index.docker.io/palermo/aether-agent",
    tars = [":cni"],
    visibility = ["//visibility:public"],
)
